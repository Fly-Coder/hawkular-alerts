{
  "triggers":[
    {
      "trigger":{
        "id": "check-process-trigger",
        "name": "Check process Trigger",
        "description": "A trigger that check if a specific process is present",
        "severity": "HIGH",
        "enabled": true,
        "autoResolve": true,
        "autoResolveAlerts": true,
        "actions":[
          {
            "actionPlugin": "email",
            "actionId": "notify-to-admins"
          }
        ]
      },
      "conditions":[
        {
          "triggerMode": "FIRING",
          "type": "AVAILABILITY",
          "dataId": "process-status",
          "operator": "NOT_UP"
        },
        {
          "triggerMode": "AUTORESOLVE",
          "type": "AVAILABILITY",
          "dataId": "process-status",
          "operator": "UP"
        }
      ]
    }
  ],
  "actions":[
    {
      "actionPlugin": "email",
      "actionId": "notify-to-admins",
      "properties": {
        "to": "admins@hawkular.org",
        "cc": "developers@hawkular.org",
        "description": "Notify by email to Admins with cc to Developers"
      }
    }
  ]
}